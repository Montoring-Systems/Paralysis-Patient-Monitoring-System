#include <WiFi.h>
#include <HTTPClient.h>

const char* ssid = "AndroidAP_5498";
const char* password = "amalamal";
char serverURL[] = "http://192.168.43.151";
char serverEndpoint[] = "/data";

void setup() {
  Serial.begin(115200);
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Connecting to WiFi...");
  }
  Serial.println("Connected to WiFi");
}

void loop() {
  float sensorValue = digitalRead(35); // Replace with your sensor reading code
  if(sensorValue==1){
    sendSensorData(sensorValue);
    delay(1000); // Adjust the delay according to your needs
  }
  
}

void sendSensorData(float value) {
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    char url[100];
    strcpy(url, serverURL);
    strcat(url, serverEndpoint);
    strcat(url, "?value=");
    char valueStr[10];
    sprintf(valueStr, "%.2f", value);
    strcat(url, valueStr);

    http.begin(url);
    int httpResponseCode = http.GET();
    if (httpResponseCode > 0) {
      Serial.print("HTTP Response code: ");
      Serial.println(httpResponseCode);
    }
    else {
      Serial.print("Error code: ");
      Serial.println(httpResponseCode);
    }
    http.end();
  }
}
